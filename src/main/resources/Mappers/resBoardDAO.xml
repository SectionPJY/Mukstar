<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ResBoardMapper">
    <!-- Board List -->
    <select id="boardList" resultType="ResBoardDTO">
        SELECT *
        FROM m_resboard
        <include refid="sort" />
    </select>
    <sql id="sort">
        <!-- 최신순 정렬 -->
        <if test="_parameter == null">
            ORDER BY rb_id DESC;
        </if>
        <if test="_parameter == 'rb_id'">
            ORDER BY rb_id DESC;
        </if>

        <!-- 조회수 정렬 -->
        <if test="_parameter == 'rb_view'">
            ORDER BY rb_view ASC;
        </if>
    </sql>

    <!-- SELECT Board -->
    <select id="boardSelect" resultType="ResBoardDTO">
        SELECT rb_id, rb_sub, rb_uid, rb_date, rb_view, rb_raiting, r_name, r_address, rb_contents
        FROM m_resboard, m_restaurant
        WHERE m_resboard.rb_rid = m_restaurant.r_id;
    </select>

    <select id="boardSelectToUid" resultType="ResBoardDTO">
        select *
        from m_resboard
        where rb_uid = #{u_id};
    </select>

    <select id="boardSelectToRname" resultType="ResBoardDTO">
        select *
        from m_resboard
        where rb_name = #{rb_name};
    </select>

    <!-- INSERT Board -->
    <insert id="boardInsert">
        INSERT INTO m_resboard(rb_rid, rb_uid, rb_sub, rb_rating, rb_contents)
        VALUES((SELECT r_id FROM m_restaurant WHERE r_name = #{r_name }), #{rb_uid }, #{rb_sub }, #{rb_rating }, #{rb_contents });
    </insert>

    <!-- Delete Board -->
    <delete id="boardDelete">
        DELETE FROM m_resboard
        WHERE rb_id = #{rb_id };
    </delete>

    <!-- Update Board -->
    <update id="boardUpdate">
        UPDATE m_resboard
        SET rb_sub = #{rb_sub }, rb_contents = #{rb_contents }, rb_rating = #{rb_rating }, rb_date = NOW()
        WHERE rb_id = #{rb_id };
    </update>

    <!-- Update rb_view -->
    <update id="updaterb_view">
        UPDATE m_resboard
        SET rb_view = rb_view + 1
        WHERE rb_id = #{rb_id };
    </update>
</mapper>