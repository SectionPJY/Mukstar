<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">
    <!-- User List Query -->
    <select id="userList" resultType="UserDTO">
        SELECT *
        FROM m_user;
    </select>

    <!-- User Login Query -->
    <select id="userLogin" resultType="int">
        SELECT COUNT(*)
        FROM m_user
        WHERE u_id = #{u_id } AND u_pw = #{u_pw };
    </select>

    <!-- User Sign Up -->
    <insert id="userSignup">
        INSERT INTO m_user(u_id, u_pw, u_nickname, u_phone)
        VALUES(#{u_id }, #{u_pw }, #{u_nickname }, #{u_phone });
    </insert>

    <!-- Update User -->
    <update id="userUpdate">
        UPDATE m_user
        SET u_pw = #{u_pw }, u_nickname = #{u_nickname }, u_phone = #{u_phone }
        WHERE u_id = #{u_id };
    </update>
    
    <!-- User Information -->
    <select id="userInfo" resultType="UserDTO">
        SELECT *
        FROM m_user
        WHERE u_id = #{u_id };
    </select>

    <!-- User Searching -->
    <select id="userSearch" resultType="UserDTO">
        SELECT *
        FROM m_user
        WHERE u_nickname LIKE #{searchWord };
    </select>

